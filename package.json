{
  "name": "@plugola/mono-repo",
  "private": true,
  "version": "0.0.0",
  "description": "The MOL Ads mono-repo",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --topological-dev --exclude @plugola/generator run build",
    "build:generator": "yarn workspace @plugola/generator run build",
    "clean": "yarn workspaces foreach run clean",
    "commit": "yarn git-cz",
    "generate:package": "yarn yo ./packages/generator/generators/package",
    "release": "yarn workspaces foreach --no-private --topological-dev run release",
    "start": "yarn build && yarn workspaces foreach --exclude @plugola/generator --parallel --interlaced run start",
    "test": "yarn workspaces foreach run test"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/johngeorgewright/ts-mono-repo/issues"
  },
  "homepage": "https://github.com/johngeorgewright/ts-mono-repo#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "typescript": "^4.2.4",
    "yo": "^4.1.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx,yml,yaml}": [
      "yarn prettier --ignore-path .gitignore --write"
    ]
  }
}
