{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "include-v-in-tag": true,
  "packages": {
    "packages/graph": {},
    "packages/invoke": {},
    "packages/logger": {},
    "packages/message-bus": {},
    "packages/plugin-manager": {},
    "packages/query-params": {},
    "packages/store": {},
    "packages/store-logger": {},
    "packages/streams": {},
    "packages/test": {},
    "packages/vendor-plugin-manager": {},
    ".": {
      "changelog-path": "CHANGELOG.md",
      "bump-minor-pre-major": false,
      "bump-patch-for-minor-pre-major": false,
      "draft": false,
      "prerelease": false
    }
  },
  "plugins": [
    {
      "type": "node-workspace",
      "updatePeerDependencies": true
    }
  ],
  "release-type": "node",
  "tag-separator": "-"
}